@page
@model Spider_EMT.Pages.DeleteEntityRecordModel
@{
    ViewData["Title"] = "Delete Entity";
}

<partial name="_Notification" />

<div class="mb-2" style="display:flex; flex-direction:column;justify-content:space-evenly;">
    <div class="container form-control pt-4 pb-2" style="height:auto;background-color: #f4f0ec; width:60%;">
        <div class="container form-control border-2 mb-2 card" style="display:flex; justify-content:space-around; height:auto; flex-direction:column; ">
            <div class="card">
                <div class="card-header">
                    <div class="card-title fw-bold">Entity Type Box</div>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Search Section -->
                    <div class="mb-3 form-group">
                        <label for="searchCriteria" class="form-label">
                            Entity Type to be Deleted 
                        </label>
                        <select id="searchCriteria" class="form-select striped-select" style="width:100%">
                            <option value="" selected disabled>Select a Type</option>
                            <option value="Category">Category</option>
                            <option value="Profile">Profile</option>
                            <option value="User">User</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <div style="display:flex; justify-content:center; gap:10px;">
                            <button id="searchButton" class="btn mt-2 create-btn" style="width:140px;">Search</button>
                            <button id="clearButton" class="btn btn-secondary mt-2" style=" width:180px;">Clear</button>
                        </div>
                    </div>

                    <div id="resultsCount" class="mb-3" style=" display:none;"></div>
                    <div id="searchResults" class="mb-3 overflow-auto" style="font-size:0.7rem; display:none; max-height: 300px;">
                        <!-- Search results will be displayed here -->
                    </div>
                    <div style="display: flex; justify-content: center;">
                        <button id="selectButton" class="btn btn-success mt-2" style=" display:none; width: 80%">Select</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <form method="post">
        <div id="deleteEntitySection" class="container form-control pt-4 pb-2 mt-3" style="height:auto; background-color: #f4f0ec; width:60%;display:none;">
            <input type="hidden" asp-for="DeleteEntityViewModelData.EntityId" id="EntityId" />
            <input type="hidden" asp-for="DeleteEntityViewModelData.EntityType" id="EntityType" />
            <div class="container form-control border-2 mb-2" style="display:flex; justify-content:space-around; height:auto; flex-direction:column; ">
                <div class="row pb-1 pt-2">
                    <div style="color:#17a2b8; text-align:center; font-size:1.7rem; font-weight:500">Entity's Details</div>
                    <div>
                        <hr />
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <div class="card-title fw-bold" style="font-size:1.2rem">Details</div>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <!-- Details Form -->
                        <div id="detailsForm">
                            <!-- Dynamic form content will be inserted here -->
                        </div>
                        <div class="row">
                            <div class="col-2"></div>
                            <div class="col-3 me-4">
                                <button type="submit" class="btn create-btn" style="width:140px;">Delete</button>
                            </div>
                            <div class="col-4 ms-3">
                                <a asp-page="/Index" class="btn btn-secondary" style="width:180px;"> Back to Transactions</a>
                            </div>
                            <div class="col-3"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/deleteEntityRecord.js" asp-append-version="true"></script>
}