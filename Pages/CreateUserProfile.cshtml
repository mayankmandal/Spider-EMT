@page
@model Spider_EMT.Pages.CreateUserProfileModel
@{
    ViewData["Title"] = "Create Profile";
}

@if (TempData["success"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.options = {
            "positionClass": "toast-bottom-right", // Set the position to right bottom
        };
        toastr.success('@TempData["success"]');
    </script>
}
@if (TempData["error"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.options = {
            "positionClass": "toast-bottom-right", // Set the position to right bottom
        };
        toastr.error('@TempData["error"]');
    </script>
}

<div class="mb-2" style="display:flex; flex-direction:column;justify-content:space-evenly;">
    <form method="post">
        <div id="createProfileSection" class="container form-control pt-4 pb-2" style="height:auto; background-color: #f4f0ec; width:60%;">

            <div class="container form-control border-2 mb-2" style="display:flex; justify-content:space-around; height:auto; flex-direction:column;">
                <div class="row pb-1 pt-2">
                    <div style="color:#17a2b8; text-align:center; font-size:1.7rem; font-weight:500">CREATE USER</div>
                    <div>
                        <hr />
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <div class="card-title fw-bold" style="font-size:1.2rem">User Details</div>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <!-- User ID and ID Number on one line -->
                        <div class="mb-3" style="display: flex; justify-content: space-between;">
                            <div style="flex: 1;">
                                <label asp-for="ProfileUsersData.IdNumber" class="form-label"></label>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-id-badge"></i></span>
                                    </div>
                                    <input type="text" asp-for="ProfileUsersData.IdNumber" placeholder="National/Iqama Number" class="form-control" />
                                </div>
                                <span asp-validation-for="ProfileUsersData.IdNumber" class="text-danger fw-bold"></span>
                            </div>
                        </div>

                        <!-- Full Name Field -->
                        <div class="mb-3">
                            <label asp-for="ProfileUsersData.FullName" class="form-label"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                </div>
                                <input type="text" asp-for="ProfileUsersData.FullName" placeholder="Full Name" class="form-control" />
                            </div>
                            <span asp-validation-for="ProfileUsersData.FullName" class="text-danger fw-bold"></span>
                        </div>

                        <!-- Email and Mobile Number on one line -->
                        <div class="mb-3" style="display: flex; justify-content: space-between;">
                            <div style="flex: 1; margin-right: 10px;">
                                <label asp-for="ProfileUsersData.Email" class="form-label"></label>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                    </div>
                                    <input type="email" asp-for="ProfileUsersData.Email" placeholder="Email Address" class="form-control" />
                                </div>
                                <span asp-validation-for="ProfileUsersData.Email" class="text-danger fw-bold"></span>
                            </div>
                            <div style="flex: 1;">
                                <label asp-for="ProfileUsersData.MobileNo" class="form-label"></label>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                    </div>
                                    <input type="tel" asp-for="ProfileUsersData.MobileNo" placeholder="Mobile Number" class="form-control" />
                                </div>
                                <span asp-validation-for="ProfileUsersData.MobileNo" class="text-danger fw-bold"></span>
                            </div>
                        </div>

                        <!-- Dropdown to Select Profile Name -->
                        <div class="mb-3">
                            <label asp-for="ProfileUsersData.ProfileSiteData.ProfileName" class="form-label"></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                </div>
                                <select asp-for="ProfileUsersData.ProfileSiteData.ProfileName" class="form-select" id="profileSelect">
                                    <option value="" disabled selected>Select a Profile</option>
                                    @foreach (var profile in Model.ProfilesData)
                                    {
                                        <option value="@profile.ProfileName" data-profileid="@profile.ProfileId">@profile.ProfileName</option>
                                    }
                                </select>
                            </div>
                            <span asp-validation-for="ProfileUsersData.ProfileSiteData.ProfileName" class="text-danger fw-bold"></span>
                        </div>

                        <!-- Hidden fields Profile Id -->
                        <input type="hidden" asp-for="ProfileUsersData.ProfileSiteData.ProfileId" id="profileIdHidden" />

                        <!-- Hidden field for UserStatus -->
                        <input type="hidden" asp-for="ProfileUsersData.UserStatus" id="ProfileUsersData_UserStatus" />

                        <!-- Status with radio buttons on one line -->
                        <div class="mb-3" style="display: flex; justify-content: flex-start; align-items: center;  column-gap:2rem">
                            <label asp-for="ProfileUsersData.UserStatus" class="form-label" style="margin-right: 10px;">Status</label>
                            @foreach (var checkbox in Model.Checkboxes)
                            {
                                <div>
                                    <input type="checkbox" class="form-check-input" name="UserStatusLst" id="checkbox_@checkbox.Value" value="@checkbox.Value" checked="@checkbox.IsChecked" />
                                    <label for="checkbox_@checkbox.Value" class="fw-normal">@checkbox.Text</label>
                                </div>
                            }
                        </div>

                        <!-- Buttons for form submission -->
                        <div style="display: flex; justify-content:space-around;height:auto;">
                            <div class="row">
                                <div class="col-2"></div>
                                <div class="col-3 me-4">
                                    <button type="submit" onclick="prepareFormSubmission()" class="btn create-btn" style="width:140px;">Create</button>
                                </div>
                                <div class="col-4 ms-3">
                                    <a asp-page="/Index" class="btn btn-secondary" style="width:180px;"> Back to Transactions</a>
                                </div>
                                <div class="col-3"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/createUserProfile.js" asp-append-version="true"></script>
}