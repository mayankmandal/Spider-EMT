<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css" asp-append-version="true">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/plugins/ionicons/css/ionicons.min.css" asp-append-version="true">
    <!-- Tempusdominus Bootstrap 4 -->
    <link rel="stylesheet" href="~/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css" asp-append-version="true">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/plugins/icheck-bootstrap/icheck-bootstrap.min.css" asp-append-version="true">
    <!-- JQVMap -->
    <link rel="stylesheet" href="~/plugins/jqvmap/jqvmap.min.css" asp-append-version="true" asp-append-version="true">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/spideremt.min.css" asp-append-version="true" asp-append-version="true">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/plugins/overlayScrollbars/css/OverlayScrollbars.min.css" asp-append-version="true" asp-append-version="true">
    <!-- Daterange picker -->
    <link rel="stylesheet" href="~/plugins/daterangepicker/daterangepicker.css" asp-append-version="true" asp-append-version="true">
    <!-- summernote -->
    <link rel="stylesheet" href="~/plugins/summernote/summernote-bs4.min.css" asp-append-version="true" asp-append-version="true">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Spider_EMT.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bootstrap-datepicker.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/toastr.min.css" asp-append-version="true" />

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Spider_EMT</title>

</head>
<body class="hold-transition sidebar-mini layout-fixed">
    @if (ViewData["Title"] == "Login" || ViewData["Title"] == "Two Factor Authenticator" || ViewData["Title"] == "Logout" || ViewData["Title"] == "Email Confirmation" || ViewData["Title"] == "MFA Setup" || ViewData["Title"] == "Register User" || ViewData["Title"] == "User Verification Setup")
    {
        <partial name="_LoginStatusPartial" />

        <!-- Render only the body content for specific pages -->
        @RenderBody()

        <!-- Scripts -->
        <!-- jQuery -->
        <script src="~/plugins/jquery/jquery.min.js" asp-append-version="true"></script>
        <!-- jQuery UI 1.11.4 -->
        <script src="~/plugins/jquery-ui/jquery-ui.min.js" asp-append-version="true"></script>
        <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
        <script>
            $.widget.bridge('uibutton', $.ui.button)
        </script>

        <script src="~/js/toastr.min.js" asp-append-version="true"></script>
        <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/bootstrap-datepicker.min.js" asp-append-version="true"></script>
    }
    else
    {
        <div class="wrapper">
            @* @await Html.PartialAsync("_PreloaderPartial")

        <!-- Preloader -->
        <div class="preloader flex-column justify-content-center align-items-center">
        <img class="animation__shake" src="dist/img/Spider_Logo.jpg" alt="SpiderEMTLogo" height="60" width="60">
        </div> *@

            @* @await Html.PartialAsync("_HeaderPartial") *@
            <!-- Navbar -->
            <nav class="main-header navbar navbar-expand navbar-white navbar-light">
                <!-- Left navbar links -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                            <i class="fas fa-bars"></i>
                        </a>
                    </li>
                    <li class="nav-item d-none d-sm-inline-block">
                        <a href="#" class="nav-link">Home</a>
                    </li>
                </ul>
                <!-- Right navbar links -->
                <ul class="navbar-nav ml-auto">
                    <!-- Navbar Search -->
                    <li class="nav-item">
                        <a class="nav-link" data-widget="navbar-search" href="#" role="button">
                            <i class="fas fa-search"></i>
                        </a>
                        <div class="navbar-search-block">
                            <form class="form-inline">
                                <div class="input-group input-group-sm">
                                    <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
                                    <div class="input-group-append">
                                        <button class="btn btn-navbar" type="submit">
                                            <i class="fas fa-search"></i>
                                        </button>
                                        <button class="btn btn-navbar" type="button" data-widget="navbar-search">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                            <i class="fas fa-expand-arrows-alt"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-widget="control-sidebar" data-controlsidebar-slide="true" href="#" role="button">
                            <i class="fas fa-th-large"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <partial name="_LoginStatusPartial" />
                    </li>
                </ul>
            </nav>
            <!-- /.navbar -->


            <aside class="main-sidebar sidebar-dark-primary elevation-4 rounded">
                @* @await Html.PartialAsync("_SidebarPartial") *@
                <!-- Brand Logo -->
                <a href="#" class="brand-link">
                    <img src="dist/img/Spider_Logo.jpg" alt="Spider Logo" class="brand-image img-thumbnail rounded-circle elevation-3 " style="opacity: .8">
                    <span class="brand-text font-weight-light">Spider</span>
                </a>
                <!-- Sidebar -->
                <div class="sidebar">
                    <!-- Sidebar user panel (optional) -->
                    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                        <div id="userImageDiv" class="image">
                            <img src="" class="img-circle elevation-2" alt="User Image">
                        </div>
                        <div class="info" id="userNameDiv">
                            <a href="/EditSettings" class="d-block"></a>
                        </div>
                    </div>
                    <!-- SidebarSearch Form -->
                    <div class="form-inline">
                        <div class="input-group" data-widget="sidebar-search">
                            <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                            <div class="input-group-append">
                                <button class="btn btn-sidebar">
                                    <i class="fas fa-search fa-fw"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <!-- Sidebar Menu -->
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            <!-- Add icons to the links using the .nav-icon class
                             with font-awesome or any other icon font library -->
                            <li class="nav-item menu-open">
                                <a href="#" class="nav-link active">
                                    <i class="nav-icon fas fa-tachometer-alt"></i>
                                    <p>
                                        Dashboard <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="./Dashboard" class="nav-link active">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Dashboard</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <li class="nav-header fw-bolder">Profile View</li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas fa-user-circle"></i>
                                    <p>
                                        Profile <i class="fas fa-angle-left right"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview ms-2" id="dynamicProfileName" style="border-left:1px ridge #DDDFBF">
                                    <!-- Dynamic Content will be loaded here -->
                                </ul>
                            </li>

                            <li class="nav-header fw-bolder">Categories View</li>
                            <li class="nav-item menu-open">
                                <ul class="nav nav-treeview" id="dynamicCategoriesList">
                                    <!-- Dynamic Content will be loaded here -->
                                </ul>
                            </li>

                            <li class="nav-header fw-bolder">Pages View </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas ion-android-list"></i>
                                    <p>
                                        Pages <i class="fas fa-angle-left right"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview ms-2" id="dynamicPagesList" style="border-left:1px ridge #DDDFBF">
                                    <!-- Dynamic Content will be loaded here -->
                                </ul>
                            </li>

                        </ul>
                    </nav>
                    <!-- /.sidebar-menu -->
                </div>
                <!-- /.sidebar -->
            </aside>

            <div class="content-wrapper">
                @* @await Html.PartialAsync("_MainContentWrapper") *@
                <!-- Content Header (Page header) -->
                <div class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div id="contentHeaderDiv" class="col-sm-6">
                                <h3 class="m-0">
                                    @TempData["NavigationalPageName"]
                                </h3>
                            </div>
                            <!-- /.col -->
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item">
                                        <a href="/">Home</a>
                                    </li>
                                    <li class="breadcrumb-item active">
                                        @if (string.Compare(TempData["NavigationalPageName"] as string, "Dashboard") != 0)
                                        {
                                            @TempData["NavigationalPageName"]
                                        }
                                        else
                                        {
                                            @:#
                                        }
                                    </li>
                                </ol>
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.container-fluid -->
                </div>
                <!-- /.content-header -->
                <!-- Main content -->
                <section class="content">
                    <div class="container-fluid" role="main">
                        @RenderBody()
                    </div>
                    <!-- /.container-fluid -->
                </section>
                <!-- /.content -->
            </div>

            @* @await Html.PartialAsync("_FooterPartial") *@
            <footer class="main-footer">

                <strong>Copyright &copy; <span id="copyright-year"></span> <a href="#">Site Selection</a>. </strong> All rights reserved. <div class="float-right d-none d-sm-inline-block">
                    <!--<b>Version</b> 3.2.0-->
                </div>
            </footer>

            <!-- Control Sidebar -->
            <aside class="control-sidebar control-sidebar-dark">
                <!-- Control sidebar content goes here -->
            </aside>
            <!-- /.control-sidebar -->

        </div>

        <!-- Scripts -->
        <!-- jQuery -->
        <script src="~/plugins/jquery/jquery.min.js" asp-append-version="true"></script>
        <!-- jQuery UI 1.11.4 -->
        <script src="~/plugins/jquery-ui/jquery-ui.min.js" asp-append-version="true"></script>
        <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
        <script>
            $.widget.bridge('uibutton', $.ui.button)
        </script>
        <!-- Bootstrap 4 -->
        <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
        <!-- ChartJS -->
        <script src="~/plugins/chart.js/Chart.min.js" asp-append-version="true"></script>
        <!-- Sparkline -->
        <script src="~/plugins/sparklines/sparkline.js" asp-append-version="true"></script>
        <!-- JQVMap -->
        <script src="~/plugins/jqvmap/jquery.vmap.min.js" asp-append-version="true"></script>
        <script src="~/plugins/jqvmap/maps/jquery.vmap.usa.js" asp-append-version="true"></script>
        <!-- jQuery Knob Chart -->
        <script src="~/plugins/jquery-knob/jquery.knob.min.js" asp-append-version="true"></script>
        <!-- daterangepicker -->
        <script src="~/plugins/moment/moment.min.js" asp-append-version="true"></script>
        <script src="~/plugins/daterangepicker/daterangepicker.js" asp-append-version="true"></script>
        <!-- Tempusdominus Bootstrap 4 -->
        <script src="~/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js" asp-append-version="true"></script>
        <!-- Summernote -->
        <script src="~/plugins/summernote/summernote-bs4.min.js" asp-append-version="true"></script>
        <!-- overlayScrollbars -->
        <script src="~/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js" asp-append-version="true"></script>
        <!-- SpiderWeb App -->
        <script src="~/dist/js/spideremt.js" asp-append-version="true"></script>
        <!-- SpiderWeb for demo purposes -->
        <script src="~/dist/js/demo.js" asp-append-version="true"></script>
        <!-- Side Left Panel Features -->
        <script src="~/js/side-left-panel.js" asp-append-version="true"></script>

        <script src="~/js/toastr.min.js" asp-append-version="true"></script>
        <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/bootstrap-datepicker.min.js" asp-append-version="true"></script>
    }
    @await RenderSectionAsync("Scripts", required: false)
    @await Html.PartialAsync("_Notification")
</body>
</html> 