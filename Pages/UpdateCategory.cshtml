@page
@model Spider_EMT.Pages.UpdateCategoryModel
@{
    ViewData["Title"] = "Update Category";
}

@if (TempData["success"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.options = {
            "positionClass": "toast-bottom-right", // Set the position to right bottom
        };
        toastr.success('@TempData["success"]');
    </script>
}
@if (TempData["error"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.options = {
            "positionClass": "toast-bottom-right", // Set the position to right bottom
        };
        toastr.error('@TempData["error"]');
    </script>
}

<div class="mb-2" style="display:flex; flex-direction:column;justify-content:space-evenly;">
    <form method="post" onsubmit="prepareFormSubmission();">
        <div id="createProfileSection" class="container form-control pt-4 pb-2" style="height:auto; background-color: #f4f0ec; width:70%;">
            <input type="hidden" id="SelectedProfileId" name="SelectedProfileId" />
            <input type="hidden" id="SelectedProfileName" name="SelectedProfileName" />
            <input type="hidden" id="SelectedPagesJson" name="SelectedPagesJson" />

            <div class="container form-control border-2 mb-2" style="display:flex; justify-content:space-around;height:auto; flex-direction:column;">
                <div class="row pb-1 pt-2">
                    <div style="color:#17a2b8; text-align:center; font-size:1.7rem;">Update Category</div>
                    <div>
                        <hr />
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <div class="card-title fw-bold">Category Details</div>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <!-- Profile Dropdown -->
                        <div class="mb-3">
                            <label asp-for="SelectedPageCategory.CategoryName" class="form-label">Select Category</label>
                            <select asp-for="SelectedPageCategory.CategoryName" class="form-select" id="CategoryIdDiv">
                                <option value="" disabled selected>Select a Category</option>
                                @foreach (var category in Model.AllCategories)
                                {
                                    <option value="@category.PageCatId">@category.CategoryName</option>
                                }
                            </select>
                            <span asp-validation-for="SelectedPageCategory.CategoryName" class="text-danger fw-bold" ></span>
                        </div>

                            <!-- Checkboxes to select pages -->
                            <div class="mb-3">
                                <label class="form-label" >Select Pages</label>
                                <div id="pageCheckboxContainer" class="form-check" style="display: flex; flex-wrap: wrap; column-gap: 10px; justify-content: flex-start;">
                                    <!-- Checkboxes will be dynamically rendered here -->
                                </div>
                            </div>

                            <!-- Buttons for form submission -->
                            <div style="display: flex; justify-content:space-around;height:auto;">
                                <div class="row">
                                    <div class="col-2"></div>
                                    <div class="col-3 me-4">
                                    <button type="submit" class="btn create-btn" style="width:140px;">Update</button>
                                    </div>
                                    <div class="col-4 ms-3">
                                        <a asp-page="/Index" class="btn btn-secondary" style="width:180px;"> Back to Transactions</a>
                                    </div>
                                    <div class="col-3"></div>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/updateCategory.js"></script>
    <script>
        // Serialize the pages and categories models into JSON objects
        var availablePagesLst = @Html.Raw(Json.Serialize(Model.AllPageSites));
        var selectedPagesLst = [];
    </script>
}